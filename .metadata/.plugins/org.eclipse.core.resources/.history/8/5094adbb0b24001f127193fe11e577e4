package lacos.repeticao;

import java.util.Scanner;

public class AteZero {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		int numero, soma = 0;
		
		do {
			
			System.out.print("Digite um n√∫mero: ");
			numero = sc.nextInt();
			
			soma += numero;
			
		} while (numero != 0);
		
		sc.close();

	}

}
