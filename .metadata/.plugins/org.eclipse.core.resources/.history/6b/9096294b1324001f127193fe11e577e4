package lacos.repeticao;

import java.util.Scanner;

public class AvaliarColaboradores {
	
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		int idade, idGenero, pessoaDev;
		int mulherCis = 0, mulherTrans = 0, homemCis = 0, homemTrans = 0, naoBinario = 0, outro = 0;
		int backend = 0, frontend = 0, mobile = 0, fullstack = 0;
		int mulheresFrontend, homensMobileMaior40, naoBinarioFullstackMenor30, naoRespondeu;
		int somaIdade = 0, mediaIdade, totalPesquisa = 0;
		char resposta = 's';
		
		while (resposta == 's') {
			
			System.out.print("Idade: ");
			idade = sc.nextInt();
			
			System.out.println("Identidade de gênero: ");
			System.out.println("[1] Mulher Cis");
			System.out.println("[2] Homem Cis");
			System.out.println("[3] Não Binário");
			System.out.println("[4] Mulher Trans");
			System.out.println("[5] Homem Trans");
			System.out.println("[6] Outros");
			idGenero = sc.nextInt();
			
			System.out.println("Pessoa desenvolvedora: ");
			System.out.println("[1] Backend");
			System.out.println("[2] Frontend");
			System.out.println("[3] Mobile");
			System.out.println("[4] FullStack");
			pessoaDev = sc.nextInt();
			
			switch (idGenero) {
			case 1:
				mulherCis++;
				break;
			
			case 2:
				homemCis++;
				break;
				
			case 3:
				naoBinario++;
				break;
				
			case 4:
				mulherTrans++;
				break;
			
			case 5:
				homemTrans++;
				break;
			
			case 6:
				outro++;
				break;
			}
			
			switch (pessoaDev) {
			case 1:
				backend++;
				break;
				
			case 2: 
				frontend++;
				break;
				
			case 3:
				mobile++;
				break;
				
			case 4:
				fullstack++;
				break;
			}	
			
			if (mulherCis && frontend || mulherTrans && frontend) {
				mulheresFrontend++ ;
			}
			
			if (homemCis && mobile && idade > 40 || homemTrans && mobile && idade > 40) {
				homensMobileMaior40++;
			}
			
			if (naoBinario && fullstack && idade < 30) {
				naoBinarioFullstackMenor30++;
			}
			
			System.out.println();
			System.out.print("Deseja continuar? (s/n) ");
			resposta = sc.next().charAt(0);
			System.out.println();
			
		}
		
		System.out.println("Desenvolvedores backend: " + backend);
		
		sc.close();
		
	}

}
